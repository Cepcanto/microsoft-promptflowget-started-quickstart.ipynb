{
    "flow": {
      "name": "basic_eval_flow",
      "nodes": [
        {
            "name": "convert_to_label",
            "tool": "val_to_label",
            "inputs": {
                "value": "${flow.query}"
            }
        },
        {
            "name": "other_node",
            "tool": "val_to_label",
            "inputs": {
                "value": "${convert_to_label.output.aaa}"
            }
        }
      ],
      "inputs": {
        "query": {
          "type": "string"
        }
      },
      "outputs": {
        "labels": {
          "type": "string",
          "reference": "${convert_to_label}"
        }
      },
      "tools": [
        {
          "name": "val_to_label",
          "type": "python",
          "inputs": {
            "value": {
              "name": "value",
              "type": [
                "string"
              ]
            }
          },
          "code": "from promptflow import tool\n@tool\ndef val_to_label(value):\n    return '1' if value.startswith('P') else '0'\n",
          "function": "val_to_label"
        }
      ]
    },
    "batch_inputs": [
      {
        "query": "Park City Utah",
        "label": "1"
      }
    ],
    "connections": {}
  }